{
  "ts-node": {
    "files": true,
  },
  "compilerOptions": {
    "target": "es2022",
    "module": "commonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,                              
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "keyofStringsOnly": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", "dist", "tests"
  ]
}
